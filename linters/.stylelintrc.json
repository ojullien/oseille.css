{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-sass-guidelines"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "if",
                    "else",
                    "use",
                    "for",
                    "function",
                    "return",
                    "warn",
                    "mixin",
                    "include",
                    "extend",
                    "each"
                ]
            }
        ],
        "at-rule-disallowed-list": [
            "import"
        ],
        "indentation": 2,
        "string-quotes": "single"
    }
}