{
    "name": "oseille.css",
    "version": "1.0.0",
    "description": "A minimal, responsive CSS framework",
    "main": "dist/oseille.min.css",
    "keywords": [
        "css",
        "sass",
        "minimal",
        "responsive",
        "css-framework",
        "oseille",
        "oseille.css"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ojullien/oseille.css.git"
    },
    "homepage": "https://github.com/ojullien/oseille.css",
    "author": "Olivier Jullien <https://github.com/ojullien>",
    "license": "MIT",
    "devDependencies": {
        "sass": "^1.26.11",
        "stylelint": "^13.7.2",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "stylelint-config-standard": "^20.0.0"
    },
    "browserslist": [
        "last 4 versions"
    ],
    "scripts": {
        "test": "./node_modules/.bin/sass test/flavors:test/dist --style=expanded --charset --no-error-css --color --unicode --no-source-map",
        "lint-test": "./node_modules/.bin/stylelint test/**/*.scss",
        "lint-test-standard": "./node_modules/.bin/stylelint test/**/*.scss",
        "oseille": "./node_modules/.bin/sass src/flavors:dist --style=expanded --charset --no-error-css --color --unicode --no-source-map",
        "lint-oseille": "./node_modules/.bin/stylelint src/**/*.scss"
    }
}
